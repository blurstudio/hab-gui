[report]
show_missing = true
skip_covered = true
skip_empty = true

[run]
# Ensure all python modules in hab_gui have their coverage reported,
# not just files that pytest touches.
source = hab_gui
omit =
    */site-packages/*
    */.tox/*
    tests/*
    # This file is automatically generated by setuptools_scm
    hab_gui/version.py
parallel=True
relative_files=True
